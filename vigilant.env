#!/bin/bash
#
# This file defines the key environmental vars that the system
# requires to run. PLEASE DO NOT EDIT UNLESS YOU KNOW WHAT YOU DO
#
#
#
#Realpath command is used to get the fullpath.
if ! [ -x "$(command -v realpath)" ]; then
  echo 'Error: Realpath is not installed.' >&2
  exit 1
fi
if ! [ -x "$(command -v dirname)" ]; then
  echo 'Error: dirname is not installed.' >&2
  exit 1
fi


# If we get to this point it means realpath and dirname are installed.
FILE=$(realpath ${0})
VIGILANTHOME=$(dirname ${FILE})
export VIGILANTHOME=${VIGILANTHOME}

